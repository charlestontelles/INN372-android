<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:id="@+id/textUserHomepage_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           	android:text="@string/userhomepage_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"/>
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/textUserHomepage_Welcome"
            android:text="@string/userhomepage_welcome"
            android:layout_width="146dp"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/textUserHomepage_WelcomeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
	<TableLayout 
	    android:id="@+id/tableUserHomepage_Calulations"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
        
	    <TableRow >
	        <TextView 
	            android:id="@+id/textUserHomepage_TableHeadCheckbox"
	            android:text="@string/userhomepage_tablehead_checkbox"
	            android:layout_width="30dp"
            	android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/textUserHomepage_TableHeadName"
	            android:text="@string/userhomepage_tablehead_name"
	            android:layout_width="80dp"
            	android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/textUserHomepage_TableHeadDateTime"
	            android:text="@string/userhomepage_tablehead_datetime"
	            android:layout_width="80dp"
            	android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/textUserHomepage_TableHeadStatus"
	            android:text="@string/userhomepage_tablehead_status"
	            android:layout_width="80dp"
            	android:layout_height="wrap_content"/>
	    </TableRow>
	</TableLayout>
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
    	<Button
	        android:id="@+id/buttonUserHomepage_New"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="34dp"
	        android:text="@string/userhomepage_button_new" 
	        android:onClick="newCalculation"/>        
        
		<Button
	        android:id="@+id/buttonUserHomepage_Edit"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="34dp"
	        android:text="@string/userhomepage_button_edit" 
	        android:onClick="editCalculation"/>
	</LinearLayout>
		
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		
	    <Button
	        android:id="@+id/buttonUserHomepage_Delete"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="34dp"
	        android:text="@string/userhomepage_button_delete" 
	        android:onClick="deleteCalculation"/>
		
		<Button
	        android:id="@+id/buttonUserHomepage_Compare"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="34dp"
	        android:text="@string/userhomepage_button_compare" 
	        android:onClick="compareCalculation"/>
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
    	<Button
	        android:id="@+id/buttonUserHomepage_Back"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="95dp"
	        android:layout_height="34dp"
	        android:text="@string/button_navigation_logout" 
	        android:onClick="viewBack"/>        
    </LinearLayout>
    
    
</LinearLayout>