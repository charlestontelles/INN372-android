<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:shrinkColumns="*"
    android:stretchColumns="*" >
    
    <TableRow 
        android:id="@+id/tableRowSolarPowerOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/textView1SolarPowerGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:gravity="center"
            android:text="Solar Power Generation"
            android:textSize="18dp"
            android:textStyle="bold" >
        </TextView>
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/TextViewAvSolarPower"
            android:text="Average Solar Power Generation"
            android:gravity="center"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="10dp" >   
        </TextView>
        
        <TextView
            android:id="@+id/TextViewAvSolarPowerKwh"
            android:gravity="center"
            android:text="KWH"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="10dp" >
        </TextView>
        
    </TableRow>
    
    <TableRow>
     
    	
        <TextView
            android:id="@+id/TextViewDaily"
            android:gravity="center"
            android:text="Daily"
            android:textSize="10dp"
            android:textStyle="bold"
            android:typeface="serif" >

        </TextView>
        
        <TextView
            android:id="@+id/TextViewDailyField"
            android:gravity="center"
            android:text=""
            android:textSize="10dp"
            android:textStyle="bold"
            android:typeface="serif" >
            
        </TextView>
        
        
       
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/TextViewAnnual"
            android:gravity="center"
            android:text="Annual"
            android:textSize="10dp"
            android:textStyle="bold"
            android:typeface="serif" >
            
        </TextView>
        
        <TextView
            android:id="@+id/TextViewAnnualField"
            android:gravity="center"
            android:text=""
            android:textSize="10dp"
            android:textStyle="bold"
            android:typeface="serif" >
            
        </TextView>
        
       
        
    </TableRow>
    
    
  	<TableRow>
  	    
  	    <TextView
  	        android:id="@+id/TextViewQuaterly"
  	        android:gravity="center"
  	        android:text="Quaterly"
  	        android:textSize="10dp"
  	        android:textStyle="bold"
  	        android:typeface="serif" >
  	        
  	    </TextView>

  	    <TextView
  	        android:id="@+id/TextViewQuaterlyField"
  	        android:gravity="center"
  	        android:text=""
  	        android:textSize="10dp"
  	        android:textStyle="bold"
  	        android:typeface="serif" >
  	        
  	    </TextView>
  	</TableRow>
  		
  	<TableRow>
  	    
  	    <TextView
  	        android:id="@+id/TextViewNet"
  	        android:gravity="center"
  	        android:text="Net"
  	        android:textSize="10dp"
  	        android:textStyle="bold"
  	        android:typeface="serif" >
  	        
  	    </TextView>

  	    <TextView
  	        android:id="@+id/TextViewNetField"
  	        android:gravity="center"
  	        android:text=""
  	        android:textSize="10dp"
  	        android:textStyle="bold"
  	        android:typeface="serif" >
  	        
  	    </TextView>
  	    
  	</TableRow>
    
  	
    
    
    

</TableLayout>