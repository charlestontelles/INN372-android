<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >
    
		<LinearLayout 
	  		android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	    <TextView
	        android:id="@+id/textBasicInput_Title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="@string/basicinput_title"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
    </LinearLayout>
    
	<LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	    <TextView
	        android:id="@+id/textEquipmentTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="Equipment Details"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textStyle="bold|italic" />
    
     </LinearLayout>
     
	<LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	    <TextView
	        android:id="@+id/textEquipmentSize"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="System Size (KWh):" />
	    
	    <EditText
	        android:id="@+id/editEquipmentSize"
	        android:layout_width="75dp"
	        android:layout_height="wrap_content"	        
	        android:ems="10"
	        android:inputType="numberDecimal"
	        android:text="0.0" />
    
    </LinearLayout>
    
   
    <LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <TextView
	        android:id="@+id/textEquipmentInverterEfficiency"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	       
	        android:text="Inverter Efficiency %:" />
	
	    
	    <EditText
	        android:id="@+id/editEquimentInverterEfficiency"
	        android:layout_width="75dp"
	        android:layout_height="wrap_content"	        
	        android:ems="10"
	        android:inputType="numberDecimal"
	        android:text="0.0" >
	    </EditText>
    
    </LinearLayout>
    
    <LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/textRoofTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Roof Details"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textStyle="bold|italic" />
    
    </LinearLayout>
    
    <LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="Percentage on North Roof:" />
	    
	    <EditText
	        android:id="@+id/editRoofNorth"
	        android:layout_width="75dp"
	        android:layout_height="wrap_content"	        
	        android:ems="10"
	        android:inputType="numberDecimal"
	        android:text="0.0" />
    
    </LinearLayout>
    
    <LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="Percentage on West Roof:" />
	    
	    <EditText
	        android:id="@+id/editRoofWest"
	        android:layout_width="75dp"
	        android:layout_height="wrap_content"	        
	        android:ems="10"
	        android:inputType="numberDecimal"
	        android:text="0.0" />
    
    </LinearLayout>
    
     <LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="Efficiency Loss (North Roof):" />
	    
	    <EditText
	        android:id="@+id/editRoofLossNorth"
	        android:layout_width="75dp"
	        android:layout_height="wrap_content"	        
	        android:ems="10"
	        android:inputType="numberDecimal"
	        android:text="0.0" />
	    
	</LinearLayout>
	
   	<LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	   	<TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="Efficiency Loss (West Roof):" />
	    
	     <EditText
	        android:id="@+id/editRoofLossWest"
	        android:layout_width="75dp"
	        android:layout_height="wrap_content"	        
	        android:ems="10"
	        android:inputType="numberDecimal"
	        android:text="0.0" />
   
    </LinearLayout>
    
   	<LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
     
	   <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="Sunlight Details"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textStyle="bold|italic" />
   
   </LinearLayout>
   
   <LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="Average Daily Hours of Sunlight:" />
    
    <EditText
        android:id="@+id/editDayLight"
        android:layout_width="75dp"
        android:layout_height="wrap_content"        
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0.0" />
    
   </LinearLayout>
   
   <LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	   <TextView
	        android:id="@+id/textView7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textStyle="bold|italic"
	        android:text="Current Energy Usage Details" />
	  
	</LinearLayout>
	   
   	<LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	   <TextView
	        android:id="@+id/textView8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="Energy Used Per Day:" />
	   
	    <EditText
	        android:id="@+id/editUsagePerDay"
	        android:layout_width="75dp"
	        android:layout_height="wrap_content"	        
	        android:ems="10"
	        android:inputType="numberDecimal"
	        android:text="0.0" />
    
    </LinearLayout>
    
	
   	<LinearLayout 
  		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <Button
	        android:id="@+id/buttonCalculate"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="95dp"
	        android:layout_height="34dp"	        
	        android:text="Calculate" 
	        android:onClick="calculate"/>
	    
	    <Button
	        android:id="@+id/buttonReset"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="95dp"
	        android:layout_height="34dp"	        
	        android:text="Reset" 
	        android:onClick="reset"/>
    
    </LinearLayout>

   	</LinearLayout>
   	
</ScrollView> 

